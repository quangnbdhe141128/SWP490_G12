@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNet.Identity;
<div class="container mt-30">
    <h2>@ViewBag.Name</h2>
    <img src="@ViewBag.Image" class="img-responsive" style="width:500px;height:500px;">
    <div>
        @Html.Raw(ViewBag.Description);
    </div>
</div>
<style>
    .BOX3 img {
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        transform: rotateY(0deg);
        backface-visibility: hidden;
        transition: 1s;
        animation: expand 1s cubic-bezier(0.47, 2.02, 0.31, -0.36);
    }

    @@keyframes expand {
        0% {
            transform: scale(0, 0);
        }

        100% {
            transform: scale(1, 1);
        }
    }

    .box:hover {
        box-shadow: 10px 10px 5px #aaaaaa;
    }

    .BOX3:hover img {
        transform: rotateY(-180deg);
    }

    .BOX3 {
        width: 100%;
        height: 260px;
        position: absolute;
        left: 0px;
        top: 30px;
        perspective: 600px;
    }

    .BOX {
        overflow: hidden;
    }

    .BOX3 p {
        margin-bottom: 10px;
        position: relative !important;
        background: white;
        width: 100%;
        height: 200px;
        padding: 17px 14px;
        font-size: 13px;
        text-align: center;
        box-sizing: border-box;
        background-color: #fff;
        position: absolute;
        left: 0;
        top: 0;
        color: #000;
        transform: rotateY(180deg);
        backface-visibility: hidden;
        transition: 1s;
    }

    .BOX3:hover p {
        transform: rotateY(0deg);
    }
</style>

