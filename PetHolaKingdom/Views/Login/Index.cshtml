@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PetHolaKingdom.Helpers.UserLogin



@if (TempData["Notify"] != null)
{
    <div class="alert alert-success" id="notify">
        @TempData["Notify"]
    </div>
}
<div style="background: url(/Assets/images/Associate-Veterinarian.jpg) no-repeat center center; height: 600px; background-attachment: fixed; background-size: cover">

    <!-- Start Preloader -->
    <div id="loading">
        <div class="element">
            <div class="sk-folding-cube">
                <div class="sk-cube1 sk-cube"></div>
                <div class="sk-cube2 sk-cube"></div>
                <div class="sk-cube4 sk-cube"></div>
                <div class="sk-cube3 sk-cube"></div>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Start Login -->
    <section class="login-wrapper">
        <div class="inner">
            <div class="login">
                <div class="login-logo"> <a href="index-2.html"><img src="../imageshome/login-logo.png" class="img-responsive" alt=""></a> </div>
                <div class="head-block">
                    <h1>LOGIN  Now</h1>
                </div>
                <div class="cnt-block">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "login-form", @class = "form-outer" }))
                    {

                        @Html.ValidationSummary(true)
                        <label class="text-danger">@TempData["LoginErrorMessage"]</label>

                        @Html.EditorFor(Model=>Model.PhoneNo, new { htmlAttributes = new { @placeholder = "User Name" } })
                        @Html.ValidationMessageFor(Model=>Model.PhoneNo, "", new { @class = "text-danger" })

                        @Html.EditorFor(Model=>Model.Password, new { htmlAttributes = new { @placeholder = "Password", @type = "password" } })
                        @Html.ValidationMessageFor(Model=>Model.Password, "", new { @class = "text-danger" })
                        <div class="button-outer">
                            <button class="btn">Login member<span class="icon-more-icon"></span></button>
                            <a href="/Register/Index" class="btn register">Register  now<span class="icon-more-icon"></span></a>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>

    <!-- End Login -->
</div>
<style>
    .form-outer input[type="text"] {
        width: 100%;
        display: block;
        border: solid 1px;
        max-width: 100%;
    }

    .form-outer input[type="password"] {
        width: 100%;
        display: block;
        border: solid 1px;
        max-width: 100%;
    }

    .form-outer input {
        margin-bottom: 10px;
    }

    .notify {
        position: absolute;
        right: 0;
    }
</style>
<script>
        $(document).ready(function () {
            if ($("#notify") != undefined) {
                setTimeout(
                    function () {
                        $("#notify").remove();
                    }, 4000);
            }

        });
</script>
}
