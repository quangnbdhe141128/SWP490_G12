@model IPagedList<PetHolaKingdom.Models.Cours>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_cms.cshtml";
}
@using PagedList.Mvc;
@using PagedList;
@using System.Data.Entity;
@using System.Linq;
<div>


    <!-- End Preloader -->
    <!-- Start Login -->
    <section class="login-wrapper">
        <div class="inner">
            <div class="col-md-12">
                <div class="card-body">
                    <div class="head-block">
                        <h1>CourseCategory List</h1>
                    </div>
                    <div class="">
                        @using (Html.BeginForm("Index", "CourseManage", FormMethod.Get))
                        {
                            <input type="text" name="keysearch" value="@ViewBag.KeySearch" placeholder="Nhập từ khoá tìm kiếm..." style=" width: 50%; margin-bottom: 20px;height:26px;" />
                            <input class="btn btn-primary" type="submit" name="submit" value="Tìm kiêm" />
                        }
                        <a class="btn btn-success" href="@Url.Action("Add", "CourseManage")">Thêm mới</a>
                        @if (TempData["Notify"] != null)
                        {
                            <div class="alert alert-success" id="notify">
                                @TempData["Notify"]
                            </div>
                        }

                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên danh mục</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            @if (Model.Count() == 0)
                            {


                                <h2>Không có dữ liệu</h2>
                            }
                            else
                            {
                                int count = 1;
                                foreach (var item in Model)
                                {
                                    <tbody>

                                        <tr>
                                            <td> @count</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>

                                            <td>
                                                @{
                                                    if (item.Status == true)
                                                    {
                                                        <input checked="checked" class="check-box" type="checkbox">
                                                    }
                                                    else
                                                    {
                                                        <input checked="checked" class="check-box" disabled="disabled" type="checkbox">
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" href="@Url.Action("Edit", "CourseManage",new {id=item.id})"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Chỉnh sửa</a>
                                                <a class="btn btn-warning" href="" onclick="return confirm('Bạn có chắc chắn muốn xoá bản ghi này?');"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Xoá</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                    count += 1;
                                }


                            }

                        </table>

                        @Html.PagedListPager(Model, page => Url.Action("Index", "CourseManage", new { page, @keysearch = @ViewBag.KeySearch }))
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
    </section>
    <!-- End Login -->
</div>
<style>
    .pagination {
        float: right !important;
    }

    .form-outer input[type="text"] {
        width: 100%;
        display: block;
        border: solid 1px;
        max-width: 100%;
    }

    .form-outer input[type="date"] {
        width: 100%;
        display: block;
        border: solid 1px;
        max-width: 100%;
    }

    .login-wrapper .button-outer {
        text-align: center;
    }

    .table {
        background: white !important;
    }

    #example1_filter {
        display: none !important;
    }

    body {
        padding-top: 0px;
        padding-bottom: 20px;
    }

    .form-select {
        font-size: 30px;
        width: 100%;
        border: none !important;
        max-width: 100% !important;
    }

    .alert-success {
        position: absolute;
        top: 0;
        right: 0;
    }
</style>
@section scripts {
    <script>
        $(document).ready(function () {
            if ($("#notify") != undefined) {
                setTimeout(
                    function () {
                        $("#notify").remove();
                    }, 4000);
            }

        });
    </script>
}