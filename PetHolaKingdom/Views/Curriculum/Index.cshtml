

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IPagedList<PetHolaKingdom.Helpers.CurriculumList>
@using PagedList.Mvc;
@using PagedList;
<div class="news-events padding-lg">
    <div class="container mb-4">
        @using (Html.BeginForm("Index", "Curriculum", FormMethod.Get))
        {
            <input type="text" name="keysearch" value="@ViewBag.KeySearch" placeholder="Tìm đại cương..." style=" width: 50%; margin-bottom: 20px; height: 46px;" />
            <input class="btn btn-primary" type="submit" name="submit" value="Tìm kiêm" />
        }
        <ul class="row">
            @{

                foreach (var item in Model)

                {
                    <li class="col-sm-3">
                        <div class="inner">
                            <figure>
                                <a href="/CoursePage/Index/@item.Id">
                                    <img src="@item.Image" class="img-responsive" style="width:300px;height:300px;">
                                </a>
                                <figcaption>
                                    <div class="cnt-block">
                                        <h3>@item.Name</h3>
                                        <div class="bottom-block clearfix">
                                            <div class="comment">
                                                <div class="icon"><span class="icon-chat-icon"></span></div>
                                                <a href="/CoursePage/Index/@item.Id">View course</a>
                                            </div>
                                        </div>
                                    </div>
                                </figcaption>
                            </figure>
                        </div>
                    </li>
                }
            }
        </ul>
        @Html.PagedListPager(Model, page => Url.Action("Index", "Curriculum", new { page, @keysearch = @ViewBag.KeySearch }))
    </div>
</div>
<style>
    .inner:hover {
        box-shadow: 10px 10px 5px #aaaaaa !important;
    }

    .news-events figure {
        position: initial;
    }

    .news-events ul li .cnt-block {
        display: block;
        padding: 10px 30px 0px 30px;
        background: #fff;
        position: relative;
    }

    .news-events figcaption {
        position: relative;
        top: 0;
        left: 0;
    }
</style>


